/* pages/route/walking.wxss */

.weui-tabbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  background: #3df;
  height: 60px;
}

.weui-tab__panel {
  margin-top: 60px;
  width: 100vw;
  height: 100vh;
}

.map-box {
  width: 100%;
  height: 100%;
}

.text-box {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}

.text-box .text{
  margin: 10px;
}

.detail-button {
  position: fixed;
  bottom: 10px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  background: #0091ff;
  width:50px;
  text-align:center;
  border-radius:5px;
  z-index: 999;
}

.weui-media-box {
  padding: 5px;
}